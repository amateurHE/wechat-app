.game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.game-header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
}

.game-board {
  margin: 20rpx 0;
  border: 2rpx solid #000;
}

.row {
  display: flex;
}

.cell {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.wall {
  background-color: #666;
}

.floor {
  background-color: #fff;
}

.player {
  position: absolute;
  width: 80%;
  height: 80%;
  left: 10%;
  top: 10%;
  background-color: #f00;
  border-radius: 50%;
}

.box {
  position: absolute;
  width: 90%;
  height: 90%;
  left: 5%;
  top: 5%;
  background-color: #005cff;
}

.box-on-target {
  background-color: #0f0;
}

.target {
  position: absolute;
  width: 60%;
  height: 60%;
  left: 20%;
  top: 20%;
  background-color: #ff0;
  border-radius: 50%;
}

.controls {
  margin-top: 40rpx;
  width: 300rpx;
}

.control-row {
  display: flex;
  justify-content: center;
  margin: 10rpx 0;
}

.control-row button {
  margin: 0 10rpx;
  min-width: 80rpx;
} 